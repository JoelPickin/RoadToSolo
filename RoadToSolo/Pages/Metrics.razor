<div class="sidebar-container">
    <h1 class="sidebar-section-title">Metrics</h1>
    <div class="sidebar-span"></div>
    @foreach (var metric in MetricsList)
    {
        <div class="sidebar">
            <h2 class="metric-title">@metric.Title</h2>
            <h2 class="metric-value">@metric.Value</h2>
        </div>
        <div class="sidebar-span"></div>
    }
</div>